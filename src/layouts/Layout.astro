---
import '../styles/base.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
          new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-5X6726QZ');</script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1f2937" />
    <link rel="canonical" href="https://markoandersson.info/" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://markoandersson.info/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://markoandersson.info/images/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="627" />
    <meta property="og:site_name" content="Marko Andersson" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://markoandersson.info/images/og-image.png" />
    <meta name="twitter:creator" content="@marko_andersson" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/icon-192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>{title}</title>

    <!-- Person Schema for Google Site Name -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Marko Andersson",
        "url": "https://markoandersson.info",
        "image": "https://markoandersson.info/images/sherlock-holmes.png",
        "jobTitle": "Software Developer & Legacy Modernization Specialist",
        "description": "Software developer specializing in modernizing legacy systems, clean code practices, and iterative improvement strategies.",
        "email": "marko.andersson@gmail.com",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Jyväskylä",
          "addressCountry": "Finland"
        },
        "sameAs": [
          "https://github.com/markoandersson",
          "https://www.linkedin.com/in/markoandersson",
          "https://x.com/marko_andersson"
        ],
        "knowsAbout": [
          "Legacy Software Modernization",
          "Clean Code",
          "Test-Driven Development",
          "DevOps",
          "Domain-Driven Design",
          "Java",
          "C#",
          ".NET Core",
          "Spring",
          "Azure",
          "AWS"
        ]
      }
    </script>
  </head>
  <body>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5X6726QZ"
                    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
    <main>
      <slot />
    </main>
    <style is:global>
      :root {
        --font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      }

      html {
        font-family: var(--font-family);
        background-color: var(--color-bg);
        color: var(--color-text);
      }

      html.dark {
        --color-bg: var(--color-bg-dark);
        --color-text: #FFFFFF;
        --color-primary: #FF5733;
        background-color: var(--color-bg);
        color: var(--color-text);
      }

      body {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem;
      }

      main {
        min-height: 80vh;
      }

      footer {
        text-align: center;
        padding: 2rem 0;
      }

      a {
        color: var(--color-primary);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </body>
</html>
