---
// src/components/Technology.astro
export interface Props {
  technologies: Array<{
    name: string;
    icon: string;
    iconType: string;
  }>;
}

const { technologies } = Astro.props;
---

<section id="technologies" class="w-full py-8 border-t border-b border-primary-light">
  <div class="w-full px-6 flex flex-wrap justify-between items-center text-tertiary text-lg">
    {technologies.map(tech => (
        <span class="whitespace-nowrap flex items-center gap-2 py-2 px-3 transition-colors duration-300 hover:text-accent-light">
          <i class={`fa-${tech.iconType} fa-${tech.icon} text-accent-lighter`} aria-hidden="true"></i>
          {tech.name}
        </span>
    ))}
  </div>
</section>