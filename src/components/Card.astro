---
export interface Props {
  title: string;
  body: string;
  href?: string;
}

const { href, title, body } = Astro.props;
---

<div class="card">
  <div class="content">
    <h3>
      {href ? <a href={href}>{title}</a> : title}
    </h3>
    <p>{body}</p>
  </div>
  {href && (
    <div class="link-wrapper">
      <a href={href} class="link">
        Learn more
        <span>&rarr;</span>
      </a>
    </div>
  )}
</div>

<style>
  .card {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }
  
  .content {
    flex: 1;
  }
  
  h3 {
    margin-top: 0;
    color: var(--color-primary);
    font-size: 1.5rem;
  }
  
  h3 a {
    color: inherit;
    text-decoration: none;
  }
  
  h3 a:hover {
    text-decoration: underline;
  }
  
  p {
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .link-wrapper {
    margin-top: auto;
  }
  
  .link {
    display: inline-flex;
    align-items: center;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: bold;
  }
  
  .link:hover {
    text-decoration: underline;
  }
  
  .link span {
    margin-left: 0.5rem;
    transition: transform 0.2s;
  }
  
  .link:hover span {
    transform: translateX(4px);
  }
</style>