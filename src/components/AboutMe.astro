---
// src/components/AboutMe.astro
export interface Props {
  title: string;
  keyExpertise: Array<{
    name: string;
    details: string;
  }>;
  yearsExperience: number;
  booksRead: number;
  amountOfProjects: number;
}

const { title, keyExpertise, yearsExperience, booksRead, amountOfProjects } = Astro.props;
---

<section id="about" class="py-20">
  <h2 class="text-3xl font-bold text-center mb-12 text-accent-light">{title}</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-start">
    <div class="space-y-6">
      {keyExpertise.map(item => (
          <div>
            {/* Placeholder for potential icon */}
            {/* <Icon name="code" class="inline-block w-6 h-6 mr-2 text-accent-light" /> */}
            <h3 class="text-xl font-semibold text-accent-light mb-1">{item.name}</h3>
            <p class="text-secondary">{item.details}</p>
          </div>
      ))}
    </div>

    <div class="space-y-6">
      <h3 class="text-2xl font-semibold mb-4">My Journey</h3>
      <p class="text-secondary leading-relaxed">
        {/* Placeholder About Me Text */}
        I'm a senior software developer with over {yearsExperience} years of experience, bringing a mature and insightful approach to complex software challenges. My focus is on understanding the deeper context, fostering collaboration, and delivering sustainable value by aligning technology with core business objectives and user needs. I emphasize sustainable practices, genuine agile collaboration, and solving real-world problems through iterative evolution of systems. My approach champions clean code principles and practices that are semantically aligned with the business domain to facilitate better communication. I view Test-Driven Development as a design discipline for creating robust and maintainable software.         <br/><br/>
        Let's connect and discuss how I can contribute to your next project.
      </p>
      <div class="flex justify-around pt-4 border-t border-primary-light">
        <div class="text-center">
          <div class="text-3xl font-bold text-accent-light">{yearsExperience}+</div>
          <div class="text-tertiary">Years Experience</div>
        </div>
         <div class="text-center">
            <div class="text-3xl font-bold text-accent-light">{amountOfProjects}+</div>
            <div class="text-tertiary">Projects Delivered</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-accent-light">{booksRead}+</div>
          <div class="text-tertiary">Books read</div>
        </div>
      </div>
    </div>
  </div>
</section>
